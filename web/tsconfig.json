{
  "compilerOptions": {
    "module": "amd",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "shared/Header": ["../shared/src/components/Header"],
      "shared/Footer": ["../shared/src/components/Footer/Footer"]
    }
  },
  "include": ["./src"],
  "exclude": ["./src/*.test.*", "./src/charting_library"]
}
