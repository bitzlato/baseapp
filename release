# Create version tag for PRODUCTION
STRATEGY=${1:-patch}

echo "You can use \"patch\", \"minor\", or \"major\"."
yarn version $STRATEGY
APP_VERSION=$(node -p '`v${require("./package.json").version}`')
git add package.json && \
git commit -m $APP_VERSION && \
git tag -a $APP_VERSION -m "Production version $APP_VERSION" && \
git push origin && \
git push origin --tags
