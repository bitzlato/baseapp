.cardDesktop {
  border-radius: var(--border-radius);
  box-shadow: 3px 3px 10px 3px var(--shadow-color-level-1);

  .cardHeader {
    border-bottom: 1px solid var(--tab-panel-border-line-color);
    line-height: 1.8;
  }
}

.cardMobile {
  margin-top: calc(var(--gap) * 0.5);
}

.cardHeader {
  h3,
  h4 {
    margin: 0;
  }
}

.cardMd {
  max-width: 550px;
}

.cardLg {
  max-width: 960px;
}

.cardXlg {
  max-width: 1160px;
  overflow: hidden;
}
